<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="personneleducationsystem">
        <createTable tableName="CERTIFICATE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CERTIFICATE"/>
            </column>
            <column name="USER_ID" type="UUID"/>
            <column name="GRADE" type="INT"/>
            <column name="COURSE_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="personneleducationsystem">
        <createTable tableName="COURSE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_COURSE"/>
            </column>
            <column name="TITLE" type="VARCHAR(255)"/>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="personneleducationsystem">
        <createTable tableName="MATERIAL">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_MATERIAL"/>
            </column>
            <column name="TITLE" type="VARCHAR(255)"/>
            <column name="CONTENT" type="CLOB"/>
            <column name="COURSE_ID" type="UUID"/>
            <column name="TEST_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="personneleducationsystem">
        <createTable tableName="TEST">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TEST"/>
            </column>
            <column name="COURSE_ID" type="UUID"/>
            <column name="CONTECT" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="personneleducationsystem">
        <createIndex indexName="IDX_CERTIFICATE_COURSE" tableName="CERTIFICATE">
            <column name="COURSE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="COURSE_ID" baseTableName="CERTIFICATE"
                                 constraintName="FK_CERTIFICATE_ON_COURSE" referencedColumnNames="ID"
                                 referencedTableName="COURSE"/>
    </changeSet>
    <changeSet id="6" author="personneleducationsystem">
        <createIndex indexName="IDX_CERTIFICATE_USER" tableName="CERTIFICATE">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="CERTIFICATE"
                                 constraintName="FK_CERTIFICATE_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="7" author="personneleducationsystem">
        <createIndex indexName="IDX_MATERIAL_COURSE" tableName="MATERIAL">
            <column name="COURSE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="COURSE_ID" baseTableName="MATERIAL"
                                 constraintName="FK_MATERIAL_ON_COURSE" referencedColumnNames="ID"
                                 referencedTableName="COURSE"/>
    </changeSet>
    <changeSet id="8" author="personneleducationsystem">
        <createIndex indexName="IDX_MATERIAL_TEST" tableName="MATERIAL">
            <column name="TEST_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="TEST_ID" baseTableName="MATERIAL" constraintName="FK_MATERIAL_ON_TEST"
                                 referencedColumnNames="ID" referencedTableName="TEST"/>
    </changeSet>
    <changeSet id="9" author="personneleducationsystem">
        <createIndex indexName="IDX_TEST_COURSE" tableName="TEST">
            <column name="COURSE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="COURSE_ID" baseTableName="TEST" constraintName="FK_TEST_ON_COURSE"
                                 referencedColumnNames="ID" referencedTableName="COURSE"/>
    </changeSet>
</databaseChangeLog>