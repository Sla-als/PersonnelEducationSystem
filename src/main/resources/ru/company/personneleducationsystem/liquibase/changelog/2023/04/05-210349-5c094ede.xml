<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="personneleducationsystem">
        <createTable tableName="USER_CERTIFICATE_LINK">
            <column name="CERTIFICATE_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USER_CERTIFICATE_LINK"/>
            </column>
            <column name="USER_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USER_CERTIFICATE_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="personneleducationsystem">
        <addForeignKeyConstraint baseColumnNames="CERTIFICATE_ID" baseTableName="USER_CERTIFICATE_LINK"
                                 constraintName="FK_USECER_ON_CERTIFICATE" referencedColumnNames="ID"
                                 referencedTableName="CERTIFICATE"/>
    </changeSet>
    <changeSet id="3" author="personneleducationsystem">
        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="USER_CERTIFICATE_LINK"
                                 constraintName="FK_USECER_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="4" author="personneleducationsystem">
        <dropColumn columnName="USER_ID" tableName="CERTIFICATE"/>
    </changeSet>
</databaseChangeLog>